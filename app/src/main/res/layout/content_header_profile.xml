<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="match_parent"
       android:layout_height="@dimen/home_content_profile"
       android:background="@android:color/holo_orange_dark"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>

   <TextView
       android:id="@+id/headerClientNameText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Gabriel Marcos"
       android:textColor="@android:color/white"
       android:textSize="26sp"
       android:textStyle="bold"
       android:layout_marginStart="16dp"
       app:layout_constraintBottom_toTopOf="@+id/headerAmountCheckingAccountText"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/headerAmountCheckingAccountText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:textColor="@android:color/white"
       android:text="Conta Corrente: R$ 123,22"
       android:layout_marginStart="16dp"
       android:layout_marginBottom="16dp"
       app:layout_constraintBottom_toTopOf="@+id/headerAmountSavingsAccountText"
       app:layout_constraintStart_toStartOf="@+id/imageView"/>

   <TextView
       android:id="@+id/headerAmountSavingsAccountText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:textColor="@android:color/white"
       android:text="Conta PoupanÃ§a: R$ 123,22"
       android:layout_marginStart="16dp"
       android:layout_marginBottom="16dp"
       app:layout_constraintBottom_toBottomOf="@+id/imageView"
       app:layout_constraintStart_toStartOf="@+id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
